{% extends 'base.html.twig' %}

{% block title %}Digital Library{% endblock %}

{% block body %}
<section class="library-hero intro">
    <div class="hero-content">
        <h1>Digital Library</h1>

        <p>
            Welcome to the Digital Library project.
            Discover, organize and manage your book collection
            in a modern and elegant interface.
        </p>

        <div class="library-actions">
            <a href="{{ path('library_show_all') }}" class="btn btn-primary">
                Visa alla böcker
            </a>
            <a href="{{ path('library_create') }}" class="btn btn-secondary btn-outline">
                Lägg till ny bok
            </a>
        </div>
    </div>
</section>
{% endblock %}
