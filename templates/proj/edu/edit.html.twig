{# templates/proj/edu/edit.html.twig #}
{% extends 'proj/base.html.twig' %}

{% block title %}Edit Learning Item{% endblock %}

{% block library_body %}
<section class="edu-form-container">
    <div class="form-header">
        <h1 class="page-title">Edit Learning Item</h1>
    </div>

    {{ form_start(form, {'attr': {'class':'edu-form'}}) }}
        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class':'form-input'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class':'form-textarea'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.url) }}
            {{ form_widget(form.url, {'attr': {'class':'form-input'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.status) }}
            {{ form_widget(form.status, {'attr': {'class':'form-select'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">Update Item</button>
    {{ form_end(form) }}
</section>
{% endblock %}
